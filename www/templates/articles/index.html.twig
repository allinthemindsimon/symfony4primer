{% extends 'base.html.twig' %}
{% block title %}"Articles Project"
{% endblock %}
{% block body %}
    {% if articles %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article }}</td>
                        <td>
                            <a class="btn btn-dark" href="/artcile/{{ article }}">Show</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles to display</p>
    {% endif %}
{% endblock %}
